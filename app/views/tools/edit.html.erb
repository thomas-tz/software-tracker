<div class="column-container">

  <div class="form-container drop-shadow">
    <%= form_with model: @tool, html: { class: 'form-horizontal' } do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name %>
      <%= form.label :category_id %>
      <%= form.select :category_id, Category.all.pluck(:name, :id), { include_blank: true } %>
      <%= form.submit %>
    <% end %>
  </div>

  <div class="table-container drop-shadow">
    <%= render 'table', tool: @tool %>
  </div>

  <div class="options">
    <%= link_to 'Delete Tool', @tool, data: { turbo_method: :delete }, onclick: "return confirm('Are you sure you want to delete this tool?')"%>
  </div>

</div>