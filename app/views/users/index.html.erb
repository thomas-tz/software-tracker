<table>
  <tr>
    <th>Name</th>
    <th>Tools</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, user %></td>
      <td><%= @tool_count[user.id] %></td>
    </tr>
  <% end %>
</table>

<% flash.each do |type, msg| %>
  <div>
    <p><%= type %></p>
    <p><%= msg %></p>
  </div>
<% end %>

<h2>Add New User</h2>
<%= form_with model: User.new do |form| %>
  <%= form.label :first_name %><br>
  <%= form.text_field :first_name %><br>
  <%= form.label :last_name %><br>
  <%= form.text_field :last_name %><br>
  <%= form.submit %>
<% end %>