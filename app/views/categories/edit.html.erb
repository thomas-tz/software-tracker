<%= form_with model: @category do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.submit %>
<% end %>

<% if @category.tools.empty? %>
  <p>No tools belong to this category!</p>
<% else %>
  <%= render 'table', category: @category, tool_user_count: @tool_user_count %>
<% end %>

<% flash.each do |type, msg| %>
  <div>
    <p><%= type %></p>
    <p><%= msg %></p>
  </div>
<% end %><br>

<%= link_to 'Delete Category', @category, data: { turbo_method: :delete }, onclick: "return confirm('Are you sure you want to delete this category?')"%>